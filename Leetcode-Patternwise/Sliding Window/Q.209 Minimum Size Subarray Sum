class Solution {
    public int minSubArrayLen(int target, int[] nums) {
        int n = nums.length;
        int start = 0;
        int sum = 0;
        int result = Integer.MAX_VALUE;

        for (int end = 0 ; end < n ; end++) {
            sum += nums[end];

            while ( sum >= target) {
                int len = (end - start) + 1;
                result = Math.min(result , len);
                sum = sum - nums[start];
                start++;
            }
        }
        return result == Integer.MAX_VALUE ? 0 : result;
    }
}
